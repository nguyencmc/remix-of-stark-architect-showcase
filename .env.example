# =============================================================================
# Environment Configuration
# =============================================================================
# Copy this file to .env and update with your values
# =============================================================================

# Supabase Configuration
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# =============================================================================
# Deployment Configuration
# =============================================================================

# SSH credentials for deployment
DEPLOY_USER=root
DEPLOY_HOST=your-server.com
DEPLOY_PASS=your-ssh-password
DEPLOY_PATH=/var/www/myexamtest
DEPLOY_PORT=22

# =============================================================================
# Auto Deploy Configuration
# =============================================================================

# Enable auto deploy on commit (default: false)
AUTO_DEPLOY=false

# Enable auto deploy on push (default: true)  
AUTO_DEPLOY_ON_PUSH=true

# Branch to deploy from (default: main)
DEPLOY_BRANCH=main

# =============================================================================
# Optional: Notifications
# =============================================================================

# Slack webhook URL for deployment notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# Discord webhook URL
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/xxx
